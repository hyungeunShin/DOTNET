<Window x:Class="_1019.Window4"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_1019"
        mc:Ignorable="d"
        Title="Window4" Height="450" Width="800" MouseDown="Window_MouseDown" PreviewMouseDown="Window_PreviewMouseDown">
    <Canvas MouseDown="Canvas_MouseDown" PreviewMouseDown="Canvas_PreviewMouseDown" Background="LightBlue" Margin="10">
        <Label MouseDown="Label_MouseDown" PreviewMouseDown="Label_PreviewMouseDown" Background="Yellow" Canvas.Left="50" Canvas.Top="50" Padding="10">
            <StackPanel MouseDown="StackPanel_MouseDown" PreviewMouseDown="StackPanel_PreviewMouseDown" Background="Black">
                <Ellipse Width="100" Height="50" Fill="Red"/>
                <Label MouseDown="Label_MouseDown_1" PreviewMouseDown="Label_PreviewMouseDown_1"  Background="LightGreen" HorizontalContentAlignment="Center" Content="버튼"/>
                <Ellipse Width="100" Height="50" Fill="Blue"/>
            </StackPanel>
        </Label>
    </Canvas>
</Window>
