<Window x:Class="_1019.Window5"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_1019"
        mc:Ignorable="d"
        Title="Window5" Height="450" Width="800" MouseDown="Window_MouseDown" PreviewMouseDown="Window_PreviewMouseDown">
    <Canvas  Background="LightBlue" Margin="10">
        <Label  Background="Yellow" Canvas.Left="50" Canvas.Top="50" Padding="10">
            <StackPanel Background="Black">
                <Ellipse Width="100" Height="50" Fill="Red"/>
                <Button Click="Button_Click" MouseDown="Button_MouseDown" PreviewMouseDown="Button_PreviewMouseDown"  Background="LightGreen" HorizontalContentAlignment="Center" Content="버튼"/>
                <Ellipse Width="100" Height="50" Fill="Blue"/>
            </StackPanel>
        </Label>
    </Canvas>
</Window>
